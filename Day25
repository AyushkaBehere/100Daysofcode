//Check is no. is prime or not
import java.util.*;

public class functions {
    public static boolean isPrime(int n) {
        boolean isPrime = true;
        for (int i = 2; i <= n - 1; i++) {
            if (n % i == 0) {
                isPrime = false;
                break;
            }
        }

        return isPrime;
    }

    public static void main(String args[]) {
        System.out.println(isPrime(11));
    }
}

// Check is no. is prime or not
import java.util.*;

public class functions {

    // only for n>=2
    public static boolean isPrime(int n) {
        // corner cases
        // 2
        if (n == 2) {
            return true;
        }

        for (int i = 2; i <= n - 1; i++) {
            if (n % i == 0) { // completely dividing
                return false;
            }
        }

        return true;
    }

    public static void main(String args[]) {
        System.out.println(isPrime(4));
    } 
}






